                    );
                },
                success: function(response) {
                    if(response){
                        $('#loadAjax').text('Erfolgreich gesendet');
                        $('#answer-dropbox').val('');
                        $('#answer-text').val('');
                    }else{
                        $('#loadAjax').text('Fehler.');
                    } 
                },
                complete: function(){
                    $('#loadAjax')
                    .fadeIn()
                    .delay(2000)
                    .fadeOut()
                    .delay(4000, function() {
                       $(this).remove();
                       TINY.box.hide();
                    });
                }
            });
        });
    });
