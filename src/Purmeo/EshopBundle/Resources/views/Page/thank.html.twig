                loginName: loginName,   
                id: 1
            };
            var url = '{/literal}{$InstallPath}/{$IndexPublic}{literal}';
            $.ajax({
                url: url,
                data: request,
                beforeSend: function(){
                    $('#loadAjax').remove();
                    $('#answer-button').after(
